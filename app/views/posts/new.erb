    <!--if post was unsuccesful, display error messages-->
<ul class="errors">
    <% @post.errors.full_messages.each do |message|%>
    <li><%= message%></li>
    <% end%>    
</ul>

<form method = "POST" action = "/posts" id="post-form">
    
    <div class = "form-group">
    <label for = "photo_url">Photo URL</label>
    <input type = "text" id = "photo_url" name="photo_url">
    </div>
    
    <div class = "form-group">
    <!--password input type obscures the text -->
    <label for="caption">Caption</label>
    <input type = "caption" id="caption" name="caption">
    </div>
    
    <div class = "form-group">
    <!--button is the tag type to submit the form-->
    <button class="button" type = "submit">Post</button>
    </div>
    
</form>
